<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbHotel"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bg_home_wave"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tbHotel">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"

    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="hotelMargo"
                android:orientation="vertical"
                android:padding="16dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                app:strokeColor="@color/colorPrimaryDark"
                app:strokeWidth="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/imgBus"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/oyo_hotel" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/namaHotel"
                        android:layout_below="@+id/imgBus"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="-190dp"
                        android:layout_marginLeft="200dp"
                        android:text="HOTEL OYO MARGONDA"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="#2c3e50"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignTop="@+id/namaHotel"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="198dp"
                        android:src="@drawable/star"
                        />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignTop="@+id/namaHotel"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="220dp"
                        android:src="@drawable/star"
                        />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignTop="@+id/namaHotel"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="240dp"
                        android:src="@drawable/star"
                        />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignTop="@+id/namaHotel"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="260dp"
                        android:src="@drawable/star"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/hargaHotel"
                        android:layout_below="@+id/imgBus"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="-50dp"
                        android:layout_marginLeft="200dp"
                        android:text="Rp.250.000 /room/night"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="#f39c12"
                        android:textStyle="bold" />

                </RelativeLayout>



            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="hotelBor"
                android:orientation="vertical"
                android:padding="16dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                app:strokeColor="@color/colorPrimaryDark"
                app:strokeWidth="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/imgHotel3"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/hotel_borobudur" />

                    <TextView
                        android:id="@+id/namaHotel3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgHotel3"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="-190dp"
                        android:text="HOTEL BOROBUDUR\nJAKARTA"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="#2c3e50"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignTop="@+id/namaHotel3"
                        android:layout_marginLeft="198dp"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/star" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignTop="@+id/namaHotel3"
                        android:layout_marginLeft="220dp"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/star" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignTop="@+id/namaHotel3"
                        android:layout_marginLeft="240dp"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/star" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignTop="@+id/namaHotel3"
                        android:layout_marginLeft="260dp"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/star" />

                    <TextView
                        android:id="@+id/hargaHotel3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgHotel3"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="-50dp"
                        android:text="Rp.461.000 /room/night"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="#f39c12"
                        android:textStyle="bold" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="hotelAston"
            android:orientation="vertical"
            android:padding="16dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:strokeColor="@color/colorPrimaryDark"
            app:strokeWidth="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/imgHotel2"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/aston_jkt" />

                <TextView
                    android:id="@+id/namaHotel2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgHotel2"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="-190dp"
                    android:text="HOTEL ASTON JAKARTA"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#2c3e50"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignTop="@+id/namaHotel2"
                    android:layout_marginLeft="198dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/star" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignTop="@+id/namaHotel2"
                    android:layout_marginLeft="220dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/star" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignTop="@+id/namaHotel2"
                    android:layout_marginLeft="240dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/star" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignTop="@+id/namaHotel2"
                    android:layout_marginLeft="260dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/hargaHotel2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgHotel2"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="-50dp"
                    android:text="Rp.573.000 /room/night"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#f39c12"
                    android:textStyle="bold" />

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</LinearLayout>
    </ScrollView>
</RelativeLayout>